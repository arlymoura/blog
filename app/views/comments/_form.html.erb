<h3>Deixe um Comentário</h3>
<div class="row">
  <div class="col-xs-12">
    <%= form_for([@post, @post.comments.build], :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="message">
          <label for="message-input">Commentário</label>
          <%= f.text_area :body, rows: 3, id: "message-input" ,class: "form-control", placeholder: "Please enter a comment", autofocus: true %>
        </div>
      <div class="submit">
          <%= f.submit 'Comentar', class: "" %>
      </div>
    <% end %>
  </div>
</div>
