<h2>Lista de Usu√°rios</h2>
<div class="row">
  <div class="col-md-7 center-block">
  </div>
  <div class="col-md-5 center-block">
    <%= form_tag users_path, method: :get do %>

      <div class="col-lg-12">
        <div class="input-group">
          <%= text_field_tag :search, "", class: "form-control", placeholder: "Pesquisar nome ..." %>
          <span class="input-group-btn">
            <%= submit_tag 'Ir', class: 'btn btn-primary' %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  </br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Facebook</th>
        <th>Tipo</th>
        <th>Editar</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.provider.present? %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Editar',edit_user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-md-4 center-block">
    </div>
    <div class="col-md-8 center-block">
      <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
